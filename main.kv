#: import hex kivy.utils.get_color_from_hex
#: import CardTransition kivy.uix.screenmanager.CardTransition
#: import settings settings
#: import images images
<Runner>:
    # Handling the gesture event.
    on_left_to_right_line: manager.change_screen("lists_screen", "right")
    ScreenManagement:
        id: manager
        ListsScreen:
        EntriesScreen:
        SettingsScreen:
<ListsScreen>:
    name: 'lists_screen'
    md_bg_color: hex(settings.background_colour)
    on_pre_enter: root.refresh_lists()
    # on_pre_leave:
    # Main
    BoxLayout:
        orientation: 'vertical'
        #space_x: self.size[0]/3

        # Upper Panel
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            size_hint: 1, 0.1

            Button:
                text: 'Settings'
                on_press: root.manager.change_screen("settings_screen", "left")

            Button:
                text: 'Edit'
            Button:
                text: 'Search'


        ScrollView:
            # Lists panel
            BoxLayout:
                id: lists_panel_id
                size_hint: 1, 0.8
                orientation: 'vertical'
                spacing: 1
                height: self.minimum_height
                size_hint_y: None
                padding: 10

        # Bottom panel
        BoxLayout:
            orientation: 'horizontal'
            height: 50
            size_hint: 1, 0.1

            TextInput:
                id: add_list_input_id
                halign: "center"
                valign: "middle"
                is_focusable: True
                hint_text: 'Create new List'
                font_size: 0.5 * self.height
                multiline: False
                write_tab: False
                on_text_validate:
                    root.create_list(self.text)
                    root.refresh_lists()
                    self.text = ""

<EntriesScreen>:
    name: 'entries_screen'
    orientation: 'vertical'
    on_pre_enter:
        root.refresh_entries()
        self.ids.current_list_lbl.text = "<--  " + root.list_name
    on_pre_leave: self.ids.input_id.focus = False
    md_bg_color: hex(settings.background_colour)

    # Root
    BoxLayout:
        orientation: 'vertical'

        # Upper panel
        BoxLayout:
            id: entries_upper_panel_id
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            size_hint: 1, 0.1
            Button:
                id: current_list_lbl
                text: "<-  " + root.list_name
                size_hint: 0.6, 1
                on_press: root.manager.change_screen("lists_screen", "right")

            Button:
                text: 'Edit'
                size_hint: 0.2, 1
            Button:
                text: 'Tags'
                size_hint: 0.2, 1

        # Entries Panel
        ScrollView:
            StackLayout:
                id: entries_panel_id
                height: self.minimum_height
                orientation: 'rl-tb'
                padding: 10
                spacing: 1
                size_hint: (1,None)



                #size_hint: 1, 0.8

                #size: (self.parent.width, self.parent.height)
                #size_hint_y: None




        # Bottom Panel
        BoxLayout:
            orientation: 'vertical'
            height: 50
            size_hint: 1, 0.1
            TextInputCustomValidate:
                id: input_id
                #font_size: self.height - 15
                # hint_text_color: defaults  [0.5, 0.5, 0.5, 1.0] (grey).
                #valign: "middle"
                halign: "center"
                is_focusable: True
                hint_text: 'Add new entry'
                font_size: 0.5 * self.height
                multiline: False
                write_tab: False
                on_text_validate:
                    root.create_entry(self.text)
                    self.text = ''


<SettingsScreen>:
    name: 'settings_screen'
    orientation: 'vertical'
    #space_x: self.size[0]/3
    md_bg_color: hex(settings.background_colour)

    # Root
    BoxLayout:
        orientation: 'vertical'
        spacing: 2
        Label:
            text: 'App version ' + settings.app_version

            #font_size: settings.font_size
        Button:
            text: 'Reset DB'
            height: "70dp"
            size_hint: (1, None)
            on_press:
                root.reset_db()

        TextInput:
            halign: "center"
            valign: "middle"
            is_focusable: True
            hint_text: 'Delete list'
            multiline: False
            write_tab: False
            font_size:  0.5 * self.height
            height: "70dp"
            size_hint: (1, None)
            on_text_validate:
                root.delete_list_by_name(self.text)
                self.text = ""
        MDTextField:
            halign: "center"
            valign: "middle"
            is_focusable: True
            hint_text: 'Entry font size'
            multiline: False
            write_tab: False
            font_size:  0.5 * self.height
            height: "70dp"
            size_hint: (1, None)
            text : root.entries_font_size

        MDTextField:
            halign: "center"
            valign: "middle"
            is_focusable: True
            hint_text: 'Lists font size'
            multiline: False
            write_tab: False
            font_size:  0.5 * self.height
            height: "70dp"
            size_hint: (1, None)
            text : root.lists_font_size


        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Back'
                height: "70dp"
                size_hint: (1, None)
                #font_size: settings.font_size
                on_press: root.manager.change_screen("lists_screen", "right")
            Button:
                text: 'Save'
                height: "70dp"
                size_hint: (1, None)
                #font_size: settings.font_size
                on_press:
                    root.manager.change_screen("lists_screen", "right")
                    root.save_settings()

<ErrorPopup>:
    title: 'Exeption handler'
    id: error_popup_id
    on_open: app.root.popupreference=self
    size_hint: 1, 0.4
    auto_dismiss: True
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        Label:
            text: root.error_text


        Button:
            text: 'Close'
            height: "70dp"
            size_hint:(1, None)
            on_press:
                root.dismiss()

