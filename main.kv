#: import hex kivy.utils.get_color_from_hex
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
ScreenManagement:
    transition: FadeTransition()
    ListsScreen:
    EntriesScreen:
    SettingsScreen:

<ListsScreen>:
    name: 'lists_screen'
    # Main
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        #space_x: self.size[0]/3
        canvas.before:
            Color:
                rgba: hex('CC6600')
            Rectangle:
                size: self.size
                pos: self.pos


        # Upper Panel
        BoxLayout:
            size_hint_y: None
            height: 50
            size_hint: 1, 0.15

            Button:
                text: 'Settings'
                on_press: root.manager.current = "settings_screen"
            Button:
                text: 'Edit'
            Button:
                text: 'Search'


        # Lists panel
        BoxLayout:
            padding: 10
            # Lists buttons
            BoxLayout:
                orientation: 'vertical'
                #padding: lists_window.space_x, 10
                size_hint: 0.8, 0.1
                Button:
                    text: root.Lists_list[0][1]
                    font_size: 30
                    height: 40
                    size_hint_y: None
                    on_press: root.manager.current = "entries_screen"

                Button:
                    text: root.Lists_list[1][1]
                    font_size: 30
                    height: 40
                    size_hint_y: None
                    on_press: root.manager.current = "entries_screen"
                Button:
                    id: 'supermarket'
                    text: root.Lists_list[2][1]
                    font_size: 30
                    height: 40
                    size_hint_y: None

                    on_release: root.manager.current = "entries_screen"


                Button:
                    id: 'supermarket'
                    text: root.Lists_list[3][1]
                    font_size: 30
                    height: 40
                    size_hint_y: None
                    on_press: root.manager.current = "entries_screen"




            # Lists counters
            BoxLayout:
                orientation: 'vertical'
                #padding: lists_window.space_x, 10
                size_hint: 0.2, 0.1
                Label:
                    text:"count"
                    font_size: 30
                    height: 40
                    size_hint_y: None
                Label:
                    text:"count"
                    font_size: 30
                    height: 40
                    size_hint_y: None
                Label:
                    text:"count"
                    font_size: 30
                    height: 40
                    size_hint_y: None
                Label:
                    text:"count"
                    font_size: 30
                    height: 40
                    size_hint_y: None


        # Bottom panel
        BoxLayout:
            orientation: 'vertical'
            #padding: lists_window.space_x, 10
            size_hint_y: None
            height: 50
            Button:
                text: 'Create new List'
                font_size: 30

<EntriesScreen>:
    name: 'entries_screen'
    orientation: 'vertical'
    spacing: 10
    #space_x: self.size[0]/3
    on_enter: root.add_all_entries()
    canvas.before:
        Color:
            rgba: hex('CC6600')
        Rectangle:
            size: self.size
            pos: self.pos
    # Root
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            size_hint: 1, 0.15
            height: 50

            Button:
                text: 'Settings'
                on_press: root.manager.current = "settings_screen"
            Button:
                text: 'Edit'
                on_press: root.add_entrie(str(root.Entries_list[0][1]), root.Entries_list[0][2])
            Button:
                text: 'Search'
                on_press: root.add_all_entries()

        TextInput:
            text: 'Add new'
            write_tab: False
            on_focus: self.text = ""
        # Entries Panel
        BoxLayout:
            orientation: 'vertical'
            id: entries_panel_id

        # Bottom Panel
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Back'
                font_size: 30
                on_press: root.manager.current = "lists_screen"

<SettingsScreen>:
    name: 'settings_screen'
    orientation: 'vertical'
    spacing: 10
    #space_x: self.size[0]/3
    canvas.before:
        Color:
            rgba: hex('CC6600')
        Rectangle:
            size: self.size
            pos: self.pos
    # Root
    BoxLayout:
        orientation: 'vertical'

        Button:
            text: 'App version 0.1.1'
            font_size: 30
        Button:
            text: 'Back'
            font_size: 30
            on_press: root.manager.current = "lists_screen"

