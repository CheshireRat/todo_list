#: import hex kivy.utils.get_color_from_hex
#: import CardTransition kivy.uix.screenmanager.CardTransition
#: import images images
#: import CustomWidgets CustomWidgets
#: import Clipboard kivy.core.clipboard.Clipboard
#: import  config utils.ConfigParser
#: import  lang lang.Localization
<Runner>:
    # Handling the gesture event.
    on_left_to_right_line: manager.change_screen("lists_screen", "right")
    ScreenManagement:
        id: manager
        ListsScreen:
        EntriesScreen:
        SettingsScreen:
<ListsScreen>:
    name: 'lists_screen'
    md_bg_color: hex(config.get('background_colour'))
    on_pre_enter: root.refresh_lists()
    # on_pre_leave:
    # Main
    BoxLayout:
        orientation: 'vertical'
        #space_x: self.size[0]/3

        # Upper Panel
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            size_hint: 1, 0.1

            Button:
                text: lang.get('settings_btn')
                on_press: root.manager.change_screen("settings_screen", "left")
            Button:
                text: lang.get('edit_btn')
            Button:
                text: lang.get('search_btn')

        ScrollView:
            # Lists panel
            BoxLayout:
                id: lists_panel_id
                size_hint: 1, 0.8
                orientation: 'vertical'
                spacing: 1
                height: self.minimum_height
                size_hint_y: None
                padding: 10

        # Bottom panel
        BoxLayout:
            orientation: 'horizontal'
            height: 50
            size_hint: 1, 0.1

            TextInputCustomValidate:
                id: add_list_input_id
                halign: "center"
                valign: "middle"
                is_focusable: True
                hint_text: lang.get('list_textinput_hint')
                font_size: 0.5 * self.height
                multiline: False
                write_tab: False
                use_bubble: True
                on_text_validate:
                    root.create_list(self.text)
                    root.refresh_lists()
                    self.text = ""

<EntriesScreen>:
    name: 'entries_screen'
    orientation: 'vertical'
    on_pre_enter:
        root.refresh_entries()
        self.ids.current_list_lbl.text = "<--  " + root.list_name
    on_pre_leave: self.ids.input_id.focus = False
    md_bg_color: hex(config.get('background_colour'))

    # Root
    BoxLayout:
        orientation: 'vertical'

        # Upper panel
        BoxLayout:
            id: entries_upper_panel_id
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            size_hint: 1, 0.1
            Button:
                id: current_list_lbl
                text: "<-  " + root.list_name
                size_hint: 0.6, 1
                on_press: root.manager.change_screen("lists_screen", "right")

            Button:
                text: lang.get('edit_btn')
                size_hint: 0.2, 1
            Button:
                text: lang.get('tags_btn')
                size_hint: 0.2, 1

        # Entries Panel
        ScrollView:
            StackLayout:
                id: entries_panel_id
                height: self.minimum_height
                orientation: 'rl-tb'
                padding: 10
                spacing: 1
                size_hint: (1,None)

                #size_hint: 1, 0.8
                #size: (self.parent.width, self.parent.height)
                #size_hint_y: None

        # Bottom Panel
        BoxLayout:
            orientation: 'vertical'
            height: 50
            size_hint: 1, 0.1
            TextInputCustomValidate:
                id: input_id
                #font_size: self.height - 15
                # hint_text_color: defaults  [0.5, 0.5, 0.5, 1.0] (grey).
                #valign: "middle"
                halign: "center"
                is_focusable: True
                hint_text: lang.get('entry_textinput_hint')
                font_size: 0.5 * self.height
                write_tab: False
                use_bubble: True
                multiline: False
                on_text_validate:
                    root.create_entry(self.text)
                    self.text = ''

<SettingsScreen>:
    name: 'settings_screen'
    orientation: 'vertical'
    #space_x: self.size[0]/3
    md_bg_color: hex(config.get('background_colour'))

    # Root
    BoxLayout:
        orientation: 'vertical'
        spacing: 2

        Button:
            text: lang.get('reset_db_btn')
            height: "70dp"
            size_hint: (1, None)
            on_press:
                root.reset_db()

        TextInput:
            halign: "center"
            valign: "middle"
            is_focusable: True
            hint_text: lang.get('delete_list_textinput_hint')
            multiline: False
            write_tab: False
            font_size:  0.5 * self.height
            height: "70dp"
            size_hint: (1, None)
            on_text_validate:
                root.delete_list_by_name(self.text)
                self.text = ""

        MDTextField:
            halign: "center"
            valign: "middle"
            is_focusable: True
            hint_text: 'Entry font size'
            multiline: False
            write_tab: False
            font_size:  0.5 * self.height
            height: "70dp"
            size_hint: (1, None)
            text : config.get('entries_font_size')

        MDTextField:
            halign: "center"
            valign: "middle"
            is_focusable: True
            hint_text: 'Lists font size'
            multiline: False
            write_tab: False
            font_size:  0.5 * self.height
            height: "70dp"
            size_hint: (1, None)
            text : config.get('lists_font_size')


        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: lang.get('edit_btn')
                height: "70dp"
                size_hint: (1, None)
                on_press: root.manager.change_screen("lists_screen", "right")
            Button:
                text: lang.get('save_btn')
                height: "70dp"
                size_hint: (1, None)
                on_press:
                    root.manager.change_screen("lists_screen", "right")
                    root.save_settings()

<ErrorPopup>:
    title: lang.get('error_popup_title')
    id: error_popup_id
    on_open: app.root.popupreference=self
    size_hint: 1, 0.4
    auto_dismiss: True
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        Label:
            text: root.error_text

        Button:
            text: lang.get('close_btn')
            height: "70dp"
            size_hint:(1, None)
            on_press:
                root.dismiss()