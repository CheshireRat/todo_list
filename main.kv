#: import hex kivy.utils.get_color_from_hex
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
ScreenManagement:
    transition: FadeTransition()
    ListsScreen:
    EntriesScreen:
    SettingsScreen:

<ListsScreen>:
    name: 'lists_screen'
    # Main
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        #space_x: self.size[0]/3
        canvas.before:
            Color:
                rgba: hex('CC6600')
            Rectangle:
                size: self.size
                pos: self.pos


        # Upper Panel
        BoxLayout:
            size_hint_y: None
            height: 50
            size_hint: 1, 0.1

            Button:
                text: 'Settings'
                on_press: root.manager.current = "settings_screen"
            Button:
                text: 'Edit'
            Button:
                text: 'Search'


        # Lists panel
        BoxLayout:
            padding: 10
            # Lists buttons
            BoxLayout:
                orientation: 'vertical'
                #padding: lists_window.space_x, 10
                size_hint: 0.8, 0.1
                Button:
                    text: root.Lists_list[0][1]
                    font_size: 30
                    height: 40
                    size_hint_y: None
                    on_press:
                        root.set_list_id_pressed(0)
                        root.manager.current = "entries_screen"


                Button:
                    text: root.Lists_list[1][1]
                    font_size: 30
                    height: 40
                    size_hint_y: None
                    on_press:
                        root.set_list_id_pressed(1)
                        root.manager.current = "entries_screen"

                Button:
                    text: root.Lists_list[2][1]
                    font_size: 30
                    height: 40
                    size_hint_y: None
                    on_release:
                        root.set_list_id_pressed(2)
                        root.manager.current = "entries_screen"

                Button:
                    text: root.Lists_list[3][1]
                    font_size: 30
                    height: 40
                    size_hint_y: None
                    on_press:
                        root.set_list_id_pressed(3)
                        root.manager.current = "entries_screen"



            # Lists counters
            BoxLayout:
                orientation: 'vertical'
                #padding: lists_window.space_x, 10
                size_hint: 0.2, 0.1
                Label:
                    text: root.read_entries_count(0)
                    font_size: 30
                    height: 40
                    size_hint_y: None
                Label:
                    text: root.read_entries_count(1)
                    font_size: 30
                    height: 40
                    size_hint_y: None
                Label:
                    text: root.read_entries_count(2)
                    font_size: 30
                    height: 40
                    size_hint_y: None
                Label:
                    text: root.read_entries_count(3)
                    font_size: 30
                    height: 40
                    size_hint_y: None


        # Bottom panel
        BoxLayout:
            orientation: 'vertical'
            #padding: lists_window.space_x, 10
            size_hint_y: None
            height: 50
            Button:
                text: 'Create new List'
                font_size: 30

<EntriesScreen>:
    name: 'entries_screen'
    orientation: 'vertical'
    spacing: 10
    #space_x: self.size[0]/3
    on_pre_enter: root.add_all_entries()
    # on_enter: root.add_all_entries()
    on_pre_leave: root.remove_all_entries()
    canvas.before:
        Color:
            rgba: hex('CC6600')
        Rectangle:
            size: self.size
            pos: self.pos
    # Root
    BoxLayout:
        orientation: 'vertical'

        # Upper panel
        BoxLayout:
            size_hint_y: None
            size_hint: 1, 0.1

            Button:
                text: 'Settings'
                on_press: root.manager.current = "settings_screen"
            Button:
                text: 'Edit'
                on_press: root.add_entrie(str(root.Entries_list[0][1]), root.Entries_list[0][2])
            Button:
                id: search_id
                text: 'Search'
                on_press: root.add_all_entries()

         # middle panel
        BoxLayout:
            size_hint_y: None
            size_hint: 1, 0.8
            orientation: 'vertical'

            TextInput:
                id: input_id
                size_hint_y: None
                size_hint: 1, 0.1
                text: 'Add new'
                is_focusable: True
                focus: True
                multiline: False
                write_tab: False
                on_focus: self.text = ""
                on_text_validate:
                    input_id.focus = True
                    root.create_entrie('id',self.text)

            # Entries Panel
            BoxLayout:
                orientation: 'vertical'
                id: entries_panel_id

        # Bottom Panel
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.1
            Button:
                text: 'Back'
                size_hint_y: None

                on_press: root.manager.current = "lists_screen"

<SettingsScreen>:
    name: 'settings_screen'
    orientation: 'vertical'
    spacing: 10
    #space_x: self.size[0]/3
    canvas.before:
        Color:
            rgba: hex('CC6600')
        Rectangle:
            size: self.size
            pos: self.pos
    # Root
    BoxLayout:
        orientation: 'vertical'

        Button:
            text: 'App version 0.1.2'
            font_size: 30
        Button:
            text: 'Back'
            font_size: 30
            on_press: root.manager.current = "lists_screen"

