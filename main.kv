<ScreenManagement>:
    id: manager
    ListsScreen:
    EntriesScreen:
    SettingsScreen:

<ListsScreen>:
    name: 'lists_screen'
    on_pre_enter: root.refresh_lists()
    # on_pre_leave:
    # Main
    BoxLayout:
        orientation: 'vertical'
        #space_x: self.size[0]/3

        # Upper Panel
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            size_hint: 1, 0.1

            Button:
                text: lang.get('settings_btn')
                on_release: root.manager.change_screen("settings_screen", "left")
                size_hint: 0.6, 1
            Button:
                text: lang.get('edit_btn')
                size_hint: 0.2, 1
            Button:
                text: lang.get('search_btn')
                size_hint: 0.2, 1

        ScrollView:
            # Lists panel
            GridLayout:
                id: lists_panel_id
                cols: 1
                spacing: '5dp'
                size_hint_y: None
                height: self.minimum_height
                padding: 10


        # Bottom panel
        BoxLayout:
            orientation: 'horizontal'
            height: 50
            size_hint: 1, 0.1

            TextInputCustomValidate:
                id: add_list_input_id
                halign: "center"
                valign: "middle"
                is_focusable: True
                hint_text: lang.get('list_textinput_hint')
                font_size: 0.5 * self.height
                multiline: False
                write_tab: False

                on_text_validate:
                    root.create_list(self.text)
                    root.refresh_lists()
                    self.text = ""

<EntriesScreen>:
    name: 'entries_screen'
    orientation: 'vertical'
    on_pre_enter:
        root.refresh_entries()
        self.ids.current_list_lbl.text = "<--  " + root.list_name
    on_pre_leave: self.ids.input_id.focus = False

    # Root
    BoxLayout:
        orientation: 'vertical'

        # Upper panel
        BoxLayout:
            id: entries_upper_panel_id
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            size_hint: 1, 0.1
            Button:
                id: current_list_lbl
                text: "<-  " + root.list_name
                size_hint: 0.6, 1
                on_release: root.manager.change_screen("lists_screen", "right")

            Button:
                text: lang.get('edit_btn')
                size_hint: 0.2, 1
            Button:
                text: lang.get('tags_btn')
                size_hint: 0.2, 1

        # Entries Panel

        ScrollView:
            BoxLayout:
                id: entries_panel_id
                size_hint: 1, None
                orientation: 'vertical'
                spacing: 5
                height: self.minimum_height
                padding: 5
                size_hint_y: None

        # Bottom Panel
        DropDownWidget:
            orientation: 'vertical'
            height: 50
            size_hint: 1, 0.1
            spacing: 2
#            txt_input: txt_input
#            rv: rv
            TextInputCustomValidate:
                id: input_id
                #font_size: self.height - 15
                # hint_text_color: defaults  [0.5, 0.5, 0.5, 1.0] (grey).
                #valign: "middle"
                halign: "center"
                is_focusable: True
                hint_text: lang.get('entry_textinput_hint')
                font_size: 0.5 * self.height
                write_tab: False
                multiline: False
                on_text_validate:
                    root.create_entry(self.text)
                    self.text = ''


<SettingsScreen>:
    name: 'settings_screen'
    # Root
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            BoxLayout:
                id: settings_panel_id
                size_hint: 1, None
                orientation: 'vertical'
                spacing: 2
                height: self.minimum_height
                padding: 5


                Button:
                    text: lang.get('reset_db_btn')
                    height: "70dp"
                    size_hint: (1, None)
                    on_release:
                        root.reset_db()

                TextInput:
                    halign: "center"
                    valign: "middle"
                    is_focusable: True
                    hint_text: 'Entry font size'
                    multiline: False
                    write_tab: False
                    font_size:  0.5 * self.height
                    height: "70dp"
                    size_hint: (1, None)
                    text : config.get('entries_font_size')

                TextInput:
                    halign: "center"
                    valign: "middle"
                    is_focusable: True
                    hint_text: 'Lists font size'
                    multiline: False
                    write_tab: False
                    font_size:  0.5 * self.height
                    height: "70dp"
                    size_hint: (1, None)
                    text : config.get('lists_font_size')


        # bottom panel
        BoxLayout:
            orientation: 'horizontal'
            spacing: 2
            height: 50
            size_hint: 1, 0.1

            Button:
                text: lang.get('back_btn')
                height: "70dp"

                on_release: root.manager.change_screen("lists_screen", "right")
            Button:
                text: lang.get('save_btn')
                height: "70dp"
                on_release:
                    root.manager.change_screen("lists_screen", "right")
                    root.save_settings()

<ErrorPopup>:
    title: root.popup_title
    id: error_popup_id
    on_open: app.root.popupreference=self
    size_hint: 1, 0.4
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        Label:
            text: root.error_text
        Button:
            text: lang.get('close_btn')
            height: "70dp"
            size_hint:(1, None)
            on_release:
                root.dismiss()