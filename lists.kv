<MyGrid>

    new_list: new_list


    GridLayout:
        cols:1
        size: root.width, root.height
        Button:
            id: list_1
            text:root.list_1_name
        Button:
            id: list_2
            text: root.list_2_name
        Button:
            text: root.list_3_name
        Button:
            text: root.list_4_name
        Button:
            text:root.list_5_name
        Button:
            text: root.list_6_name
        Button:
            text: root.list_7_name
        Button:
            text: root.list_8_name
        Button:
            text:root.list_9_name
        Button:
            text: root.list_10_name
        Button:
            text: root.list_11_name
        Button:
            text: root.list_12_name
        Button:
            text: root.list_13_name
        Button:
            text: root.list_14_name


        GridLayout:
            cols:2

            TextInput:
                id: new_list
                multiline: False
                size_hint: 0.7, 0.1
            Button:
                id: create_list_btn
                pos_hint: {"x":0.5, "top":1}
                size_hint: 0.3, 0.1
                text:root.create_list_btn
                color:root.orange_color
                background_color: 0.5, 0.4, 0.5, 1
                on_press:root.create_list_btn_press()
